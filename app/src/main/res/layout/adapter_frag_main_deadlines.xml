<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/card_view_min_height"
    android:layout_margin="@dimen/card_view_margin"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/adapter_card_view_corner_radius"
    card_view:cardElevation="@dimen/adapter_card_view_card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="@dimen/adapter_card_view_main_linear_layout_margin">

        <ImageView
            android:layout_margin="8dp"
            android:layout_width="@dimen/card_view_icon_width"
            android:layout_height="@dimen/card_view_icon_height"
            android:background="@drawable/ic_placeholder"
            android:contentDescription="@string/content_descriptor_adapter_deadline_icon"/>

        <LinearLayout
            android:id="@+id/card_view_deadlines_strings"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_view_deadlines_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_view_inner_text_height" />
            <TextView
                android:id="@+id/card_view_deadlines_dataAndAmount"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/textColorRed"
                android:textSize="16sp"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
