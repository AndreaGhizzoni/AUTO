<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frag_view_costs"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/frag_view_costs_spinner_height"
        android:layout_marginBottom="@dimen/frag_view_costs_spinner_margin"
        android:background="@color/primary">
        <ImageView
            android:layout_width="@dimen/frag_view_costs_spinner_icon_width"
            android:layout_height="@dimen/frag_view_costs_spinner_icon_height"
            android:background="@drawable/ic_car_48dp"
            android:contentDescription="@string/content_descriptor_adapter_vehicle_inserted_icon"/>
        <Spinner
            android:id="@+id/frag_view_costs_spinner_vehicles"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/frag_view_costs_recycle_view_margin"
        android:layout_marginStart="@dimen/frag_view_costs_recycle_view_margin"
        android:layout_marginLeft="@dimen/frag_view_costs_recycle_view_margin"
        android:layout_marginRight="@dimen/frag_view_costs_recycle_view_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/frag_view_costs_no_cost"
            android:layout_width="match_parent"
            android:layout_height="@dimen/frag_view_costs_no_costs_associated_height"
            android:text="@string/frag_view_costs_no_cost_associated"
            android:visibility="invisible"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/frag_view_costs_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>