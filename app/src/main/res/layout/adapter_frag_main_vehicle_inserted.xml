<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="10dp">

    <LinearLayout
        android:id="@+id/card_view_vehicle_strings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical"
        android:gravity="start">

        <TextView
            android:id="@+id/card_view_vehicle_name"
            android:layout_width="match_parent"
            android:layout_height="15dp" />
        <TextView
            android:id="@+id/card_view_vehicle_data"
            android:layout_width="match_parent"
            android:layout_height="15dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnCardViewModifyInsertedVehicle"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:background="@drawable/ic_mic_black_24dp"
        android:gravity="end"
    />

</android.support.v7.widget.CardView>

