<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/card_view_vehicle_strings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/card_view_vehicle_name"
            android:layout_width="match_parent"
            android:layout_height="15dp" />
        <TextView
            android:id="@+id/card_view_vehicle_data"
            android:layout_width="match_parent"
            android:layout_height="15dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnCardViewModifyInsertedVehicle"
        android:background="@drawable/ic_mic_black_24dp"
        android:layout_alignRight="@id/card_view_vehicle_strings"
        android:layout_alignEnd="@id/card_view_vehicle_strings"
    />

</android.support.v7.widget.CardView>

