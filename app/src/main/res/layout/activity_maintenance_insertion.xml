<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    tools:context="it.science.unitn.lpsmt.auto.ui.MaintenanceInsertion">

    <!-- TODO move the dimen foreach linear layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- spinner to select the associated vehicle -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white">
            <ImageView
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/ic_car_48dp"
                android:contentDescription="This is a placeholder"/>
            <Spinner
                android:id="@+id/maintenance_insertion_vehicle_associated"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <!-- TODO insert here the place insertion filed -->

        <!-- text field to insert the name -->
         <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/ic_text_48dp"
                android:contentDescription="this is a placeholder"/>
            <EditText
                android:id="@+id/maintenance_insertion_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <!-- text field to insert the amount -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/ic_editor_attach_money_48dp"
                android:contentDescription="this is a placeholder"/>
            <EditText
                android:id="@+id/maintenance_insertion_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <!-- spinner to select the type -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/ic_car_48dp"
                android:contentDescription="this is a placeholder"/>
            <Spinner
                android:id="@+id/maintenance_insertion_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <Switch
            android:id="@+id/btnAddCalendarEvent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="Add Event in calendar"
            android:textColor="@color/black"
            />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/maintenance_insertion_inner_frag_extraordinary"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:visibility="invisible"
            >

            <TextView
                android:layout_width="38dp"
                android:layout_height="48dp"
                android:text="Date:"
                android:textStyle="bold"
            />
            <EditText
                android:id="@+id/maintenance_insertion_inner_frag_extraordinary_date"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="date"
                android:textColor="@color/black"
            />
        </LinearLayout>

        <!-- if type == tax -->
        <!--    show a checkbox to allow user to set a calendar event -->
        <!-- if type == ordinary -->
        <!--    show a checkbox to save a calendar with cadenza annuale/mensile-->
        <!-- if type == extraordinary -->
        <!--    show a date picker where the user inserts the date of maintenance -->
        <!--<FrameLayout-->
            <!--android:id="@+id/maintenance_insertion_type_args"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"/>-->
    </LinearLayout>
</RelativeLayout>
